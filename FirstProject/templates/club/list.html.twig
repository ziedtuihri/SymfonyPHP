<h1>La liste des formations est </h1>
{# recherche max #}
{% set maxV=0 %}
{% for j in f %}
{% set maxV=max(maxV,j.nb_participants) %}
{% endfor %}
<table border="2">
<tr>
    <th>Réfence</th>
    <th>Titre</th>
    <th>Description</th>
    <th>Nbr</th>
    <th>Détail</th>
</tr>   
    {% for i in f %}
    {#{% if 'theorique' in i.Description %}#}
    {% if i.nb_participants==maxV %}
    <tr>
        <td>{{i.ref}}</td>
        <td>{{i.Titre | upper}}</td>
        <td>{{i.Description}}</td>
        <td>{{i.nb_participants}}</td>
        <td><form action="{{path('detailF',{'titre':i.Titre, 'ref':i.ref}) }}">
        <button>Participer</button></form>
        <!--   ou bien aussi autre méthode-->
        <a href="{{path('detailF',{'titre':i.Titre,'ref':i.ref}) }}">participer</a></td>
    </tr>
    {% endif %}
    {% endfor %}
</table>
<h3>Le nombre de formation est {{f|length}} </h3>  
{# somme participants #}
{% set s=0 %}
{% for k in f %}
{% set s=s+k.nb_participants %}
{% endfor %}
<h3>la somme des participants est {{s}}</h3>

